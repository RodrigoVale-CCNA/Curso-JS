var agora = new Date()
var hora = agora.getHours()
var minutos = agora.getMinutes()
if(hora < 12){
    console.log(`Agora são ${hora}:${minutos}AM`)
}else{
    console.log(`Agora são ${hora}:${minutos}PM`)
}
if(hora < 5){
    console.log(`Boa Madrugada!`)
}else if(hora < 12){
    console.log(`Bom dia!`)
}else if(hora < 18){
    console.log(`Boa tarde!`)
}else{
    console.log(`Boa Noite!`)
}
